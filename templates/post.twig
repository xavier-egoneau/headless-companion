{% extends "layout.twig" %}

{% block title %}{{ post.title }} - CMS Headless{% endblock %}

{% block content %}
    <h1>{{ post.title }}</h1>
    <p class="text-muted">Publié le {{ post.created_at|date("d/m/Y à H:i") }}</p>
    <div>
        {{ post.content|raw }}
    </div>
    <a href="/" class="btn btn-secondary mt-3">Retour à l'accueil</a>
{% endblock %}